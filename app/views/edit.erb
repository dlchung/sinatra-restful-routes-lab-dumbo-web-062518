<h1>Edit Recipe</h1>

<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label>Name:</label> <input type="text" name="recipe[name]" id="name" value="<%= @recipe.name %>"></p>
  <p><label>Ingredients:</label> <input type="text" name="recipe[ingredients]" id="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p><label>Cook time:</label> <input type="text" name="recipe[cook_time]" id="cook_time" value="<%= @recipe.cook_time %>"></p>
  <input type="submit" name="submit" id="submit" value="Submit">
</form>
